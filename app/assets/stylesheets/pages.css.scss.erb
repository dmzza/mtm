div.jumbotron {
	background-color: #fff;
	height: 500px;
	margin-top: 0px;
	background-image: url(<%= asset_path "keira.jpg" %>);
	background-repeat: no-repeat;
	background-position: 0px -85px ;
	h1 {
		text-align: center;
		margin-top: 200px;
		font-family: 'futura-pt', sans-serif;
		font-size: 5.5em;
		font-weight: 700;
		text-transform: uppercase;
		text-shadow: 0px 0px 8px black;
	}
	span {
		color: #ff0071;
	}
}

div.howitworks {
	h2 {
		font-family: 'Raleway', sans-serif;
		text-align: center;
		font-size: 4em;
		font-weight: 100;
		text-transform: uppercase;
	}
	p {
		text-transform: uppercase;
		font-size: 1.3em;
		font-weight: 200;
		color: #333;
	}
}

div.popblog {
	margin-top: 25px;
	h4 {
		font-family: 'Raleway', sans-serif;
		font-size: 2em;
		font-weight: 100;
	}
}