@import "bourbon";
@import "neat";

body {
	background-color: #EEE;
}

div.container {
	@include outer-container;
}

div.row {
	@include span-columns(12);
}

div.one_twelfth {
	@include span-columns(1);
}

div.one_sixth {
	@include span-columns(2);
}

div.one_fourth {
	@include span-columns(3);
}

div.one_third {
	@include span-columns(4);
}

div.five_twelfths {
	@include span-columns(5);
}

div.one_half {
	@include span-columns(6);
}

div.two_thirds {
	@include span-columns(8);
}

div.three_fourths {
	@include span-columns(9);
}

div.five_sixths {
	@include span-columns(10);
}

div.shift_one {
	@include shift(1);
}

div.shift_two {
	@include shift(2);
}

div.shift_three {
	@include shift(3);
}

div.shift_four {
	@include shift(4);
}

div.last_column {
	@include omega();
}

div img {
	position:relative;
	max-width:100%;
}

form {
	margin-top: 20px;
	margin-bottom: 20px;
}

.field {
	width: 50%;
}

input[type=text] {
	font-family: 'futura-pt', sans-serif;
	font-size: 1.3em;
}

textarea {
	height: 80px;
}

// Headers

h3 {
	font-size: 2em;
	font-weight: normal;
	font-family: "futura-pt", sans-serif;
	text-transform: uppercase;
	text-align: center;
	clear: both;
	line-height: 1.1em;
	margin: 0 0 0 10px;
}

h4 {
	font-size:1.5em;
	font-weight: 500;
	font-family: 'futura-pt', sans-serif;
	text-transform: uppercase;
	line-height:1em;
	margin: 10px 0;
}

div.updateform {
	@include shift(1);
	@include span-columns(10);
}

// Navigation

.navigation {
	background-color: #FFF;
	height:101px;
	color: white;
	text-transform: uppercase;
	width: 100%;
	border-bottom:1px solid #EEE;
	.nav-inner {
		max-width: 65em;
		margin: 0 auto;
		@include outer-container;
	}
	a {
		color: white;
		&:hover {
			color: white;
			text-decoration: none;
		}
	}
}

#logo {
	height:101px;
	padding-top:24px;
	margin: 0 20px;
}

.alert {
	position:absolute;
	z-index:2;
	top:0;
	width:100%;
	height:100px;
	background-color:white;
	h1 {
		max-width: 33em;
		margin: 40px auto;
	}
	&.alert-success {
		background-color:#78C929;
	}
	&.alert-error {
		background-color:rgba(210, 34, 41, 1.0);
	}
}

// Footer

div.footer {
	background-color: black;
	width: 100%;
	height: 400px;
	color: white;
	padding-top: 75px;
	text-align: center;
	text-transform: uppercase;
	font-family: "futura-pt", sans-serif;
	.one_fourth {
		border-left: 2px solid #80103e;
		&:nth-child(1) {
			border: none;
		}
	}
	h2 {
		color: #ff2279;
	}
	a {
		color: white;
		font-size: 1.2em;
		line-height: 40px;
	&:hover {
		text-decoration: none;
		}
	}
}

// Helper

.clearfix {
  *zoom: 1;
}

.clearfix:before,
.clearfix:after {
  display: table;
  line-height: 0;
  content: "";
}

.clearfix:after {
  clear: both;
}

.solid-white {
	background-color:white;
}

.searchbox input {
	background-image: url(<%= asset_path 'magnifying_glass.png' %>);
	background-repeat: no-repeat;
	background-position: 5px center;
	padding-left: 35px;
}


