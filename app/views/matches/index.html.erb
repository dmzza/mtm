<% if @matches.count == 0 %>
    <div class="row product"><h4>No matches</h4></div>
<% else %>
  <div class="row product header">
    <div class="one_twelfth">Photo</div>
    <div class="five_twelfths">Details</div>
    <div class="one_twelfth">Color</div>
    <div class="one_twelfth">Texture</div>
    <div class="one_twelfth">Lumin.</div>
    <div class="one_twelfth">Overall</div>
    <div class="one_sixth last_column">Price</div>
  </div>

  <% @matches.each do |match| %>
  <div class="row product solid-white">
    <div class="one_twelfth">
        <%= image_tag match.photo(:square) %>
    </div>
    <div class="five_twelfths">
        <strong><%= match.brand.name %></strong> <%= match.name %>
        <p><%= match.description %></p>
    </div>
    <div class="one_twelfth"><h4><%= match.color %></h4></div>
    <div class="one_twelfth"><h4><%= match.texture %></div>
    <div class="one_twelfth"><h4><%= match.luminosity %></div>
    <div class="one_twelfth"><h4><%= number_to_percentage(match.overall, :precision => 0) %></div>
    <div class="one_sixth">
        <div class="left"><h4><%= number_to_currency(match.price) %></div>
        <div class="text-right">
            <%= link_to 'Edit', edit_product_match_path(match.product, match), :class => 'btn btn-warning' %><br />
            <%= link_to 'Del', product_match_path(match.product, match), method: :delete, data: { confirm: 'Are you sure you want to delete this match?' }, :class => 'btn btn-danger' %>
        </div>
    </div>
  </div>
  <% end %>
<% end %>
</div>


