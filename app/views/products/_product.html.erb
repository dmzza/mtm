<li data-id="<%= product.id %>" data-name="<%= product.name %>" data-price="<%= number_to_currency(product.price) %>" data-link="<%= product.link %>" data-description="<%= product.description %>" <% if !product.brand.nil? %>data-brand="<%= product.brand.name %>"<% end %> <% if !product.area.nil? %>data-area="<%= product.area.name %>"<% end %> <% if !product.category.nil? %>data-category="<%= product.category.name %>"<% end %>>
    <%= image_tag "lipstick.jpg" %>
    <p><span class="brand"><%= product.brand.name %></span></p>
    <p><%= truncate(product.name, :length => 35) %></p>
    <% product.matches.each do |match| %>
    	<span class="match" data-color="<%= match.color %>" data-luminosity="<%= match.luminosity %>" data-texture="<%= match.texture %>" data-overall="<%= match.overall %>"></span>
    <% end %>
</li>